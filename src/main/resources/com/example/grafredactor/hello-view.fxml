<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane alignment="center" hgap="10" prefHeight="391.0" prefWidth="474.0" vgap="10" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.grafredactor.HelloController">
    <columnConstraints>
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
    </rowConstraints>
    <children>
        <Pane prefHeight="395.0" prefWidth="481.0">
            <children>
                <VBox>
                    <Label text="Координаты мыши:" />
                    <Label text="Цвет в координатах:" />
                    <Label text="Тип рисует / не рисует:" />
                </VBox>
                <Button layoutX="460.0" layoutY="0.0" fx:id="toggleButton" onAction="#toggleLanguage" text="RU" />
                <FlowPane layoutY="321.0" prefHeight="35.0" prefWidth="433.0" hgap="3" vgap="3">
                    <children>
                        <Button fx:id="NewLine" mnemonicParsing="false" onAction="#kar" text="Карандаш" />
                        <Button fx:id="Eraser" mnemonicParsing="false" onAction="#lastik" text="Ластик" />
                        <Button fx:id="Save" mnemonicParsing="false" onAction="#save" text="Сохранить" />
                        <Button fx:id="Download" mnemonicParsing="false" onAction="#open" text="Загрузить" />
                        <Button fx:id="Undo" mnemonicParsing="false" onAction="#undo" text="Отмена" />
                        <Slider fx:id="sl" onDragDetected="#click2" />
                        <ColorPicker fx:id="cp" onAction="#act" />
                        <Button text="←" />
                        <Button text="→" />
                    </children>
                </FlowPane>

                <VBox layoutX="0.0" layoutY="380.0" spacing="10">
                    <Label text="Выбор формы карандаша:" />
                    <ComboBox fx:id="shapeType" prefWidth="120.0" />
                    <Label text="Выбор формы ластика:" />
                    <ComboBox fx:id="eraserShapeType" prefWidth="120.0" />
                    <Label text="Выбор размера ластика:" />
                    <Slider fx:id="sl2" onDragDetected="#click2" />
                </VBox>
                <FlowPane prefHeight="317.0" prefWidth="433.0">
                    <children>
                        <Canvas fx:id="canvas" height="285.0" width="386.0" />
                    </children>
                </FlowPane>
            </children>
        </Pane>
    </children>
</GridPane>